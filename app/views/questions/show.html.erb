<div class="question-top-part animate__animated animate__fadeIn">

  <div class="question-close-box">
    <%= link_to "X", user_path(current_user), class:"question-cancel-btn", style:"margin-right:20px;" %>
  </div>

  <div class="bar-container-part">
    <div class="bar-container" style="width:<%=@bar_advancement%>;">
      <div class="bar-evolution">
        <div class="bar-deco"></div>
      </div>
    </div>
  </div>

  <p></p>
</div>

<div class="container animate__animated animate__fadeIn animate__delay-1s">

  <div class="container-parts">

    <div class="questions-container" id="questions-container" data-question-id="<%= @question.id %>" data-answer-id="<%= @answer_id %>"  >
        <h1 style="margin-bottom: 100px"><%= @question.statement %></h1>
      <div>
        <div class="question-cards" data-option-card-target="content" data-controller="option-card">

          <div id="questionA" class="question-card questionA"  data-action="click->option-card#markCard">
            <div class="question-answer" >
              <p><%= @question.a %></p>
              <p class="answer-letter">A</p>
            </div>
          </div>

          <div id="questionB" class="question-card questionB" data-action="click->option-card#markCard">
            <div class="question-answer">
              <p><%= @question.b %></p>
              <p class="answer-letter">B</p>
            </div>
          </div>

          <div id="questionC" class="question-card questionC" data-action="click->option-card#markCard">
            <div class="question-answer">
              <p><%= @question.c %></p>
              <p class="answer-letter">C</p>
            </div>
          </div>

          <div id="questionD" class="question-card questionD" data-action="click->option-card#markCard">
            <div class="question-answer">
              <p><%= @question.d %></p>
              <p class="answer-letter">D</p>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
  <div id="question-buttons" style="display:flex; justify-content: space-around; align-items: center; width: 400px; margin: 0 auto;">
      <button id="confirm-button" class="btn btn-primary" data-controller="next-question" data-action="click->next-question#confirm" disabled>Confirm answer</button>
    <br><br>
    <div class="correct-answer" hidden><%= "Great job!" %></div>
    <p id="correct-answer" hidden><%= @question.correct_answer %></p>
    <div class="wrong-answer" hidden><%= "The correct answer is #{@question.correct_answer}" %></div>
    <%= button_to 'Next question', question_path(@question.id + 1), method: :get, id:"btn-next-question", class:"btn btn-success", disabled: true %>
  </div>

</div>
