<h2>Log in</h2>

<div class="container-log-in-form" style="width: 500px; margin: 0 auto;" >
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">


      <%= f.input :username,
                  placeholder: "USERNAME",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "username" } %>

      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"btn btn-success btn-log-in"%>
    </div>
  <% end %>

  <!-- Here its the "Sign up" and "Forgot your password?" buttons -->
  <%= render "devise/shared/links" %>
</div>
